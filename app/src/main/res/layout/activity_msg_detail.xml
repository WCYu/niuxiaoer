<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:orientation="vertical"
    tools:context="com.rxjy.niuxiaoer.activity.MsgDetailActivity">

    <include layout="@layout/include_header_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24px">

        <TextView
            android:id="@+id/tv_msg_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/iv_selector"
            android:paddingBottom="4px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="4px"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_s" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_msg_detail_time"
            android:layout_marginTop="24px"
            android:background="@color/colorWhite"
            app:cardCornerRadius="8px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:src="@mipmap/msg_detail_icon" />

                    <TextView
                        android:id="@+id/tv_msg_detail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:textColor="@color/colorBlackLight"
                        android:textSize="@dimen/text_size_l" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="24px"
                    android:background="@color/colorLine" />

                <TextView
                    android:id="@+id/tv_msg_detail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24px"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/text_size_m" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>
