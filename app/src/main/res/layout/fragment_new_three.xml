<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBG"
    tools:context="com.rxjy.niuxiaoer.fragment.NewOneFragment">


    <LinearLayout

        android:background="@drawable/shape_partadd_kuang"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10px"
        android:layout_width="702px"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textColor="#595757"
            android:layout_marginEnd="20px"
            android:layout_marginStart="20px"
            android:text="房屋状况"/>

        <TextView
            android:id="@+id/tv_partadd_fangwuzhuangkuang"
            android:layout_width="0px"
            android:layout_height="88px"
            android:layout_marginStart="40px"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请选择"
            android:textColor="#595757"
            android:textColorHint="#c9caca"
            android:textSize="28px" />


    </LinearLayout>

    <LinearLayout
        android:background="@drawable/shape_partadd_kuang"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10px"
        android:layout_width="702px"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textColor="#595757"
            android:layout_marginEnd="20px"
            android:layout_marginStart="20px"
            android:text="定        房"/>
        <LinearLayout

            android:layout_width="0px"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="88px">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="20px"
                    android:layout_marginStart="40px"
                    android:id="@+id/rg_partadd_dingfang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10px"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_marginEnd="20px"
                        android:id="@+id/rb_partadd_dingfang_yiding"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_radio_button_spec"
                        android:button="@null"
                        android:gravity="center"
                        android:text="已定"
                        android:textColor="@color/shape_radio_button_spec"
                        android:textSize="22px"/>

                    <RadioButton
                        android:id="@+id/rb_partadd_dingfang_weiding"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10px"
                        android:layout_weight="1"
                        android:background="@drawable/selector_radio_button_spec"
                        android:button="@null"
                        android:gravity="center"
                        android:text="未定"
                        android:textColor="@color/shape_radio_button_spec"
                        android:textSize="22px"/>

                    <RadioButton
                        android:visibility="invisible"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:layout_weight="1"
                        android:background="@drawable/selector_radio_button_spec"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingBottom="20px"
                        android:paddingTop="20px"
                        android:text="晚上"
                        android:textColor="@color/shape_radio_button_spec"
                        android:textSize="@dimen/text_size_m"/>

                    <RadioButton
                        android:visibility="invisible"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:layout_weight="1"
                        android:background="@drawable/selector_radio_button_spec"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingBottom="20px"
                        android:paddingTop="20px"
                        android:text="均可"
                        android:textColor="@color/shape_radio_button_spec"
                        android:textSize="@dimen/text_size_m"/>
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/shape_partadd_kuang"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10px"
        android:layout_width="702px"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textColor="#595757"
            android:layout_marginEnd="20px"
            android:layout_marginStart="20px"
            android:text="面        积"/>
        <EditText
            android:id="@+id/et_partadd_mianji"
            android:gravity="center_vertical"
            android:layout_marginStart="40px"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="88px"
            android:textSize="28px"
            android:inputType="numberDecimal"
            android:textColor="#595757"
            android:textColorHint="#c9caca"
            android:hint="请输入面积"/>

        <TextView
            android:layout_marginEnd="20px"
            android:textSize="28px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#595757"
            android:text="㎡"/>



    </LinearLayout>



    <LinearLayout
        android:background="@drawable/shape_partadd_kuang"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10px"
        android:layout_width="702px"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textColor="#595757"
            android:layout_marginEnd="20px"
            android:layout_marginStart="20px"
            android:text="成交类型"/>

        <TextView
            android:id="@+id/tv_partadd_chengjiaoleixing"
            android:layout_width="0px"
            android:layout_height="88px"
            android:layout_marginStart="40px"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="请选择"
            android:textColor="#c9caca"
            android:textColorHint="#c9caca"
            android:textSize="28px" />


    </LinearLayout>

    <LinearLayout
        android:background="@drawable/shape_partadd_kuang"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10px"
        android:layout_width="702px"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textColor="#595757"
            android:layout_marginEnd="20px"
            android:layout_marginStart="20px"
            android:text="免  租  期"/>

        <TextView
            android:id="@+id/tv_partadd_mianzuqi"
            android:layout_width="0px"
            android:layout_height="88px"
            android:layout_marginStart="40px"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="请选择"
            android:textColor="#c9caca"
            android:textColorHint="#c9caca"
            android:textSize="28px" />


    </LinearLayout>

    <LinearLayout
        android:background="@drawable/shape_partadd_kuang"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10px"
        android:layout_width="702px"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textColor="#595757"
            android:layout_marginEnd="20px"
            android:layout_marginStart="20px"
            android:text="交房时间"/>

        <TextView
            android:id="@+id/tv_partadd_jiaofangshijian"
            android:layout_width="0px"
            android:layout_height="88px"
            android:layout_marginStart="40px"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="请选择"
            android:textColor="#c9caca"
            android:textColorHint="#c9caca"
            android:textSize="28px" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_baocun"
        android:layout_width="556px"
        android:layout_height="82px"
        android:layout_marginTop="62dp"
        android:background="@drawable/selector_btn_sub"
        android:text="下一步"
        android:textColor="@color/colorWhite"
        android:textSize="34px"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/rl_forget_password"
        android:layout_alignParentStart="true" />


</LinearLayout>
