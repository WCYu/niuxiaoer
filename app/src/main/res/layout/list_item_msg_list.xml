<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="24px">

        <ImageView
            android:id="@+id/iv_list_item_msg_list_is_read"
            android:layout_width="46px"
            android:layout_height="60px" />

        <TextView
            android:id="@+id/tv_list_item_msg_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/iv_list_item_msg_list_is_read"
            android:textColor="@color/colorBlackLight"
            android:maxWidth="500px"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_l" />

        <TextView
            android:id="@+id/tv_list_item_msg_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_list_item_msg_list_title"
            android:layout_marginLeft="20px"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@+id/iv_list_item_msg_list_is_read"
            android:singleLine="true"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/text_size_m" />

        <TextView
            android:id="@+id/tv_list_item_msg_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_list_item_msg_list_title"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/text_size_s" />

    </RelativeLayout>

</LinearLayout>