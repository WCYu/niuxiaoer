<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:orientation="vertical"
    tools:context="com.rxjy.niuxiaoer.activity.SettingActivity">

    <include layout="@layout/include_header_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBG"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="30px"
            android:background="@color/colorLine" />

        <RelativeLayout
            android:id="@+id/rl_upd_password"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_upd_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24px"
                android:text="@string/upd_password"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/text_size_l" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24px"
                android:src="@mipmap/arrow_left" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:background="@color/colorLine" />

        <RelativeLayout
            android:id="@+id/rl_vision"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="1px"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_vision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24px"
                android:text="@string/version"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/text_size_l" />

            <TextView
                android:id="@+id/tv_vision_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24px"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_l" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLine" />

        <Button
            android:id="@+id/btn_quit"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:layout_marginTop="120px"
            android:background="@drawable/selector_btn_sub"
            android:text="退出登录"
            android:textColor="@color/colorWhite"
            android:textSize="34px" />

    </LinearLayout>

</LinearLayout>
