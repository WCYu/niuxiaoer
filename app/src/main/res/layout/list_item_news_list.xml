<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280px"
        android:background="@color/colorWhite"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <ImageView
            android:id="@+id/iv_news_list"
            android:layout_width="238px"
            android:layout_height="143px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="24px"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="10px"
            android:layout_height="30px"
            android:layout_marginTop="26px"
            android:background="@color/colorOrange" />

        <TextView
            android:id="@+id/tv_news_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="36px"
            android:layout_marginTop="24px"
            android:layout_toLeftOf="@id/iv_news_list"
            android:text="鹰计划第十六队 | 我是一首行走的散文诗"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_l" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/iv_news_list"
            android:layout_marginTop="22px"
            android:background="@color/colorLine" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/iv_news_list"
            android:layout_marginTop="22px">

            <ImageView
                android:id="@+id/iv_news_list_state"
                android:layout_width="70px"
                android:layout_height="28px"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:src="@mipmap/essence_icon" />

            <TextView
                android:id="@+id/tv_news_list_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/iv_news_list_state"
                android:text="鹰计划十六中队"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_s" />

            <TextView
                android:id="@+id/tv_news_list_great"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/great_icon"
                android:gravity="center"
                android:text="156"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_s" />

            <TextView
                android:id="@+id/tv_news_list_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_news_list_great"
                android:layout_alignBottom="@+id/tv_news_list_great"
                android:layout_marginRight="30px"
                android:layout_toLeftOf="@+id/tv_news_list_great"
                android:layout_toStartOf="@+id/tv_news_list_great"
                android:drawableLeft="@mipmap/read_icon"
                android:gravity="center"
                android:text="367"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_s" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>