<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:orientation="vertical"
    tools:context="com.rxjy.niuxiaoer.activity.ExplainActivity">

    <include layout="@layout/include_header_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="24px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="10px"
                android:layout_height="30px"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="联盟功能使用说明"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/text_size_l" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14px"
                android:layout_height="14px"
                android:layout_marginTop="8px"
                android:src="@drawable/shape_black_tip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="通过联盟页面中的“发展联盟”按钮，您可以获得专属联盟邀请码。"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_m" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14px"
                android:layout_height="14px"
                android:layout_marginTop="8px"
                android:src="@drawable/shape_black_tip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="邀请同行好友下载APP并注册登录，在联盟页面“加入联盟”中输入您的专属联盟邀请码。"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_m" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14px"
                android:layout_height="14px"
                android:layout_marginTop="8px"
                android:src="@drawable/shape_black_tip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="您与您的好友正式联盟，您的好友每在平台量房一套，您都会获得联盟奖金人民币200元。"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_m" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14px"
                android:layout_height="14px"
                android:layout_marginTop="8px"
                android:src="@drawable/shape_black_tip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="在联盟中您可以查看您的所有盟友及获取的联盟奖金"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_m" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
