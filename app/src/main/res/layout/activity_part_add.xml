<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBG"
    tools:context="com.rxjy.niuxiaoer.activity.PartAddActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="54px"
            android:paddingLeft="20px"
            android:layout_centerVertical="true"
            android:text="上一步"
            android:textSize="28px"
            android:gravity="center" />
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="100px"
            android:layout_height="fill_parent"
            android:src="@mipmap/iv_back"
            android:padding="25px"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="20px"
            android:src="@mipmap/add_icon"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="注册"
            android:textColor="@color/colorWhite"
            android:textSize="36px"
            android:layout_below="@+id/iv_back"
            android:layout_centerHorizontal="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="116px"
        android:background="@mipmap/jiagedingbu">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textSize="50px"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/tv_partadd_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="70px"
            android:textColor="#ffffff"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_jindutiao_yi"
            android:background="#fff100"
            android:gravity="center_vertical|right"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="20%  "
            android:textSize="16px"/>
        <TextView
            android:id="@+id/tv_jindutiao_er"
            android:visibility="invisible"
            android:background="#fff100"
            android:gravity="center_vertical|right"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="40%  "
            android:textSize="16px"/>
        <TextView
            android:id="@+id/tv_jindutiao_san"
            android:visibility="invisible"
            android:background="#fff100"
            android:gravity="center_vertical|right"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="60%  "
            android:textSize="16px"/>
        <TextView
            android:id="@+id/tv_jindutiao_si"
            android:visibility="invisible"
            android:background="#fff100"
            android:gravity="center_vertical|right"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="80%  "
            android:textSize="16px"/>
        <TextView
            android:id="@+id/tv_jindutiao_wu"
            android:visibility="invisible"
            android:background="#fff100"
            android:gravity="center_vertical|right"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="100%  "
            android:textSize="16px"/>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
