<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24px">

        <TextView
            android:id="@+id/tv_list_item_activity_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/iv_selector"
            android:paddingBottom="4px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="4px"
            android:text="2017-06-21"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_s" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_list_item_activity_time"
            android:layout_marginTop="24px"
            android:background="@color/colorWhite"
            app:cardCornerRadius="8px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24px">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="312px">

                    <ImageView
                        android:id="@+id/iv_list_item_activity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tv_list_item_activity_name"
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/iv_selector"
                        android:gravity="center"
                        android:text="量房"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_l" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_list_item_activity_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24px"
                    android:text="内容"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/text_size_m" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>