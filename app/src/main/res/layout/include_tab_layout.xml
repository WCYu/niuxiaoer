<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="119px"
    android:background="@color/colorBG">

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:background="@color/colorWhite"
        android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_tab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_tab_home"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/client_normal" />

            <TextView
                android:id="@+id/tv_tab_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_tab_home"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6px"
                android:text="@string/client"
                android:textColor="@color/colorGrayDark"
                android:textSize="20px" />

            <TextView
                android:layout_width="10px"
                android:layout_height="10px"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16px"
                android:background="@drawable/shape_tip"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_tab_home_state"
                android:layout_width="16px"
                android:layout_height="16px"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="56px"
                android:background="@drawable/shape_tip"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tab_find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_tab_find"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/activity_normal" />

            <TextView
                android:id="@+id/tv_tab_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_tab_find"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6px"
                android:text="@string/activity"
                android:textColor="@color/colorGrayDark"
                android:textSize="20px" />

            <TextView
                android:layout_width="10px"
                android:layout_height="10px"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16px"
                android:background="@drawable/shape_tip"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_tab_find_state"
                android:layout_width="16px"
                android:layout_height="16px"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="56px"
                android:background="@drawable/shape_tip"
                android:visibility="invisible" />

        </RelativeLayout>

        <!--<ImageView-->
            <!--android:layout_width="124px"-->
            <!--android:layout_height="116px"-->
            <!---->
            <!--/>-->

        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/rl_tab_wallet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_tab_wallet"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_wallet" />

            <TextView
                android:id="@+id/tv_tab_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_tab_wallet"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6px"
                android:text="@string/wallet"
                android:textColor="@color/colorGrayDark"
                android:textSize="20px" />

            <TextView
                android:layout_width="10px"
                android:layout_height="10px"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16px"
                android:background="@drawable/shape_tip"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_tab_wallet_state"
                android:layout_width="16px"
                android:layout_height="16px"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="56px"
                android:background="@drawable/shape_tip"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tab_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_tab_mine"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_person" />

            <TextView
                android:id="@+id/tv_tab_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_tab_mine"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6px"
                android:text="@string/mine"
                android:textColor="@color/colorGrayDark"
                android:textSize="20px" />

            <TextView
                android:layout_width="10px"
                android:layout_height="10px"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16px"
                android:background="@drawable/shape_tip"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_tab_mine_state"
                android:layout_width="16px"
                android:layout_height="16px"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="56px"
                android:background="@drawable/shape_tip"
                android:visibility="invisible" />

        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_new_shouye_add"
        android:layout_marginBottom="3px"
        android:layout_centerHorizontal="true"
        android:layout_width="124px"
        android:layout_height="116px"
        android:src="@mipmap/tianjia"/>
</RelativeLayout>