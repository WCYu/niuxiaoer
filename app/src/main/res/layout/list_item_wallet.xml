<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="20px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/v_list_item_wallet_state"
                android:layout_width="10px"
                android:layout_height="30px"
                android:background="@color/colorPrimary"/>

            <TextView
                android:id="@+id/tv_list_item_wallet_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_l"/>

            <TextView
                android:id="@+id/tv_list_item_wallet_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8px"
                android:layout_toLeftOf="@id/tv_list_item_wallet_time"
                android:layout_toRightOf="@id/v_list_item_wallet_state"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/text_size_l"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20px"
            android:background="@color/colorLine"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px">

            <TextView
                android:id="@+id/tv_list_item_wallet_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_m"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>